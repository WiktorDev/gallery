<%- include('./nav'); -%>
      <br><br><br><br>
      <center>
        <form action="/addimage" method="POST" class="w-full md:w-1/3 " enctype="multipart/form-data">
          <h2 class="text-3xl text-center text-white-700 mb-4">Wysy≈Çanie zdjec</h2>
          <div class="px-12 pb-10">
            <div class="">
              <div class="max-w-md mx-auto rounded-lg overflow-hidden md:max-w-xl">
                  <div class="md:flex">
                      <div class="w-full p-3">
                          <div class="relative border-dotted h-48 rounded-lg border-dashed border-2 border-blue-700 bg-gray-100 flex justify-center items-center">
                              <div class="absolute">
                                  <div class="flex flex-col items-center"> <i class="fa fa-folder-open fa-4x text-blue-700"></i> <span class="block text-gray-400 font-normal">Kliknij aby wybrac pliki</span> </div>
                              </div> <input type="file" class="h-full w-full opacity-0" name="files" multiple>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
            <br>
            <label for="my-modal-2" class="btn btn-primary modal-button">Dalej</label> 

            <input type="checkbox" id="my-modal-2" class="modal-toggle"> 
            <div class="modal">
              <div class="modal-box">
                <center>
                  <select class="select select-bordered w-full max-w-xs" required>
                    <option disabled="disabled" selected="selected" name="dir">Wybierz folder</option> 
                    <% folders.forEach(function(folder){ %>
                        <option><%= folder %></option> 
                    <% }) %>
                  </select>
                  <div class="modal-action">
                    <script>
                      function create1(){
                          setTimeout(function(){
                              document.forms['create'].submit();
                          }, 2000);
                          var btn = document.getElementById('btnsubmit');
                          btn.className='btn btn-primary loading';
                          btn.innerHTML='';
                      }
                  </script>
                    <button id="btnsubmit" class="btn btn-primary" onclick="create1();">Wyslij</button> 
                    <label for="my-modal-2" class="btn">Wyjdz</label>
                  </div>
                </center>
              </div>
            </div>
      </form>
      </center>
</body>
</html>